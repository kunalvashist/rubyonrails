<h1>List All the Todo's</h1>

<p>
  <%= link_to "Create New Todo", new_todo_path %>
</p>
<table>
  <tr>
    <th>Name</th>
    <th>description</th>
  </tr>
  <% @todo.each do |t| %>
    <tr>
      <td>
        <%= t.name %>
      </td>
      <td>
        <%= t.description %>
      </td>
      <td>
        <%= link_to "Edit", edit_todo_path(t) %>
      </td>
      <td>
        <%= link_to "Show", todo_path(t) %>
      </td>
      <td>
        <%= link_to "delete", todo_path(t) , method: :delete, date:{confirm:'Are You certain?'} %>
      </td>
    </tr>
  <% end %>
</table>